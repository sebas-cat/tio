  <script>
    // A√±o din√°mico
    document.getElementById('year').textContent = new Date().getFullYear();

    // Smooth scroll para enlaces internos
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const id = a.getAttribute('href');
        if(id.length>1){ e.preventDefault(); document.querySelector(id).scrollIntoView({behavior:'smooth'}); }
      });
    });

    // FAQ acorde√≥n
    document.querySelectorAll('.faq-item').forEach(item=>{
      const btn = item.querySelector('.faq-q');
      btn.addEventListener('click', ()=>{
        const open = item.classList.toggle('open');
        btn.setAttribute('aria-expanded', open);
      });
    });

    // Validaci√≥n b√°sica de formulario (sin backend)
    const form = document.getElementById('contact-form');
    const status = document.getElementById('form-status');
    form.addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = new FormData(form);
      const required = ['nombre','email','mensaje'];
      for(const k of required){ if(!data.get(k) || String(data.get(k)).trim()===''){ status.textContent = 'Por favor completa los campos obligatorios.'; return; } }
      if(!document.getElementById('consent').checked){ status.textContent = 'Debes aceptar el tratamiento de datos.'; return; }
      // Simula env√≠o
      status.textContent = '¬°Gracias! Hemos recibido tu mensaje y te contactaremos pronto.';
      form.reset();
    });

    // Genera enlace mailto con el contenido del formulario por si el usuario prefiere correo
    const mailLink = document.getElementById('mailto-fallback');
    form.addEventListener('input', ()=>{
      const nombre = encodeURIComponent(form.nombre.value || '');
      const servicio = encodeURIComponent(form.servicio.value || 'General');
      const cuerpo = encodeURIComponent(`Nombre: ${form.nombre.value}\nEmail: ${form.email.value}\nTel√©fono: ${form.telefono.value}\nServicio: ${form.servicio.value}\n\nMensaje:\n${form.mensaje.value}`);
      mailLink.href = `mailto:contacto@tudominio.com?subject=Consulta%20-%20${servicio}%20-%20${nombre}&body=${cuerpo}`;
    });
  </script>
